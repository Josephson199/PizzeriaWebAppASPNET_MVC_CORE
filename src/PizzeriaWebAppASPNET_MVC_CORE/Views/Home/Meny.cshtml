
@using System.Threading.Tasks
@model PizzeriaWebAppASPNET_MVC_CORE.Models.ViewModels.MenyViewModel
@using System.Globalization



@{
    CultureInfo swe = new CultureInfo("sv-SE");
}







<head>
    <link href="~/css/meny.css" rel="stylesheet" />
</head>

<div class="container">
    <div id="products" class="row list-group">

        
        @{
            foreach (var matratt in Model.MenyMaträtter)
            {
                <div class="item col-xs-3">


                    
                        
                        <div class="bg-primary panel-body text-center">
                            <h4>@matratt.Matratt.MatrattNamn</h4>
                        </div>

                    <form class="well" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-maträttId="@matratt.Matratt.MatrattId" asp-antiforgery="true" method="post">




                        <p class="group inner list-group-item-text" style="height: 65px;">
                            @{
                                <span>@matratt.Matratt.Beskrivning</span><br />

                                foreach (var prod in matratt.Produkter)
                                {
                                    <span id="ProdNameSpan">@prod.ProduktNamn</span>


                                }


                            }


                        </p>

                        <div class="lead">
                            @matratt.Matratt.Pris.ToString("C", swe)
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input id="btnAddFood" class="btn btn-default" type="submit" value="Lägg till" />   

                        </div>

                        



                    </form>
                </div>
                                }
        }


                   

                </div>
    </div>


